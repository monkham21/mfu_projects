package oopFinal;
import java.util.Scanner;

public class MovieTicketOrderingProgram {
	 public static void main(String[] args) {
	     Scanner scanner = new Scanner(System.in);

	     // Create an array of Ticket objects
	     Ticket[] tickets = new Ticket[1];

	     // Order Regular Movie Tickets
	     System.out.print("Enter the quantity of regular movie tickets: ");
	     int regularQuantity = scanner.nextInt();
	     Movie regularMovie = new RegularMovie("Regular Movie");
	     System.out.print("Do you have any member card? 1.GoldMemberCard 2.SilverMemberCard 3.DiamondMemberCard 4.None ");
	     int card = scanner.nextInt();
	     tickets[0] = new MovieTicket(regularMovie, regularQuantity, card);

	     // Display ticket details
	     System.out.println("Ticket Details:");
	     for (Ticket ticket : tickets) {
	         ticket.displayTicketDetails();
	         System.out.println("--------- Thank You ----------");
	     }

	     scanner.close();
	 }
}

